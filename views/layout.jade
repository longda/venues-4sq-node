doctype 5
html(lang='en')
  head
    meta(charset='utf8')
    title= title
    meta(name='viewport', content='width=device=width, initial-scale-1.0')
    //link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/lib/bootstrap/css/bootstrap.css')
    style.
      body {
        padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
      }
    link(rel='stylesheet', href='/lib/bootstrap/css/bootstrap-responsive.css')
  body
    div(class=['navbar', 'navbar-inverse', 'navbar-fixed-top'])
      .navbar-inner
        .container
          button(class=['btn', 'btn-navbar'], id="btn-search" type='button', data-toggle='collapse', data-target='.nav-collapse')
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.brand(href='#') Le Secret Venue
          div(class=['nav-collapse collapse'])
            ul.nav
              li.active: a(href='#') Home
              li: a(href='#') Info
              li: a(href='#') Help
    .container
      block content

    script(id='data_temp', type='text/html')
      tr
        td ={{ name }}
        td ={{ address }}
        td ={{ rating }}
        td ={{ num_of_reviews }}
        td ={{ num_of_checkins }}

    script(src='/lib/bootstrap/js/bootstrap.js')
    script(src='http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js')
    script(src='/lib/icanhaz/icanhaz.js')
    script(src='/js/app.js')

